{
    "model": {
        "name": "VQVAE",
        "args": {
            "img_channels": 3,
            "img_size": 32,
            "embedding_dim": 64,
            "num_embeddings": 512,
            "hidden_dim": 128,
            "num_residual_layers": 2,
            "num_residual_hiddens": 32,
            "commitment_cost": 0.25,
            "use_ema": true,
            "decay": 0.99,
            "epsilon": 1e-5,
            "lr": 1e-3,
            "b1": 0.9,
            "b2": 0.999,
            "weight_decay": 1e-5,
            "ckpt_path": "",
            "loss_weights": {
                "recon_loss": 1,
                "vq_loss": 10
            }
        }
    },
    "dataset": {
        "name": "CelebA",
        "img_size": 32,
        "img_channels": 3,
        "batch_size": 256,
        "train_val_split": 0.8
    }
}
